<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.MainMenuController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Label text="SISTEMA DE GESTIÓN DE ÓRDENES" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
                <Label text="Gestión de Órdenes de Inspección Sismográfica" textFill="#ecf0f1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Versión: 2.0 - Con datos precargados" textFill="#bdc3c7">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>

        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <children>
                <Label text="Empleado logueado: Juan Pérez" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="btnCerrarOrden" mnemonicParsing="false" onAction="#handleCerrarOrden" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="1. Cerrar Orden de Inspección" />
                        <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#handleSalir" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="2. Salir" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>